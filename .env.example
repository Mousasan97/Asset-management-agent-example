# OpenAI API Configuration
# IMPORTANT: Replace this with your actual OpenAI API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here
# After creating an assistant, add its ID here to avoid recreating it on each startup
OPENAI_ASSISTANT_ID=your_assistant_id_here

# Application Settings
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
SECRET_KEY=your_secret_key_here

# Asset Management API Configuration
API_URL=https://eurac.goantares.uno/public/api/v3/Assets
ACTIVITIES_API_URL=https://eurac.goantares.uno/public/api/v1/Activities
AUTH_KEY=your_auth_key_here
AUTH_SECRET=your_auth_secret_here 

